{
  "version": 2,
  "builds": [
    {
      "src": "server/Cmd/main.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": ["server/**/*"]
      }
    },
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/(.*)\\.(?:jpg|jpeg|gif|png|svg|ico|css|js)$",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server/Cmd/main.go"
    }
  ]
}
